<h1>Rating statistics</h1>


<div class="row">
  
<div class="col-md-4">
  
<h3>Best Beers</h3>

<%= render 'list', top: @top_beers %>

</div>


<div class="col-md-4">

<h3>Best Breweries</h3>

<%= render 'list', top: @top_breweries %>

</div>

<div class="col-md-4">
  
<h3>Best Styles</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Style</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @top_styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<div class="row">
<div class="col-md-6">

<h3>Most Active Users</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Favorite Beer</th>
      <th>Ratings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @top_raters.each do |rater| %>
      <tr>
        <td><%= rater.username %></td>
        <td><%= rater.favorite_beer %></td>
        <td><%= rater.ratings.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="col-md-6">

<h3>Recent Ratings</h3>
<ul>
<% @recent_ratings.each do |recent| %>
    <li>
      <%= recent.beer.name %>
      <%= recent.score %>
      <%= recent.user.username%> 
    </li>
<% end %>
<ul>
</div>
</div>  



<p>
  <%= link_to 'New Rating', new_rating_path, class:'btn btn-primary' %>
</p>  